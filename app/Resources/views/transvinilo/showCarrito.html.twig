{% extends "base.html.twig" %}
{% block body %}
    <h1>carrito</h1>
    <table>
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Talla</th>
            <th>Color</th>
            <th>Precio</th>
            <th>Cantidad</th>
        </tr>
        {% for camiseta in carrito.listaCamisetas[1] %}
            <tr>
                <th>{{ camiseta.nombre }}</th>
                <th>{{ camiseta.talla }}</th>
                <th>{{ camiseta.color }}</th>
                <th>{{ camiseta.preu }}</th>
                <th>{{ camiseta.cantidad }}</th>
            </tr>
        {% endfor %}
        </thead>
    </table>
    <p>Total items: {{ carrito.totalItems }}</p>
    <p>Coste: {{ carrito.precioTotal }}</p>
    <p>Costes envio: {{ carrito.costesEnvio }}</p>
    <p>Coste total: {{ carrito.precioTotalEnvio }}</p>
{% endblock %}